############################################################
# 환경 변수 템플릿 (.env 복사 후 값 채워 사용)
# 실제 운영/개발 비밀 값은 절대 Git에 커밋하지 마세요.
############################################################

############################
# 애플리케이션 공통
############################
# development | production
NODE_ENV=development

# 서비스 포트 (Express)
PORT=3000

# TEST | REAL (애플리케이션 운영 모드 구분용)
APP_MODE=TEST

# ON | OFF (초기화/리셋 동작 플래그 - 필요 시 코드에서 참조)
IS_RESET=OFF

############################
# 데이터베이스 (Prisma 사용)
############################
# 예시: mysql://USER:PASSWORD@HOST:PORT/DBNAME
DATABASE_URL=mysql://USER:PASSWORD@127.0.0.1:3306/news

############################
# 크롤링 스케줄 설정
############################
# 크롤링 주기 (시간 단위) - node-schedule 트리거 기준
CRAWL_INTERVAL_HOURS=1
# 단일 HTTP 요청 타임아웃 (ms)
CRAWL_TIMEOUT_MS=30000
# 동시 처리 제한 (필요 시 구현부에서 사용)
MAX_CONCURRENT_REQUESTS=5
# 카테고리당 최대 기사 수집 개수
MAX_NEWS_PER_CATEGORY=25
# 카테고리 요청 간 지연 (ms)
REQUEST_DELAY_MS=800
# 상세 백필 시 한 번에 처리할 최대 메인 뉴스 수
BACKFILL_DETAIL_LIMIT=30

############################
# 캐시 설정
############################
# In-memory 캐시 TTL (초)
CACHE_TTL_SECONDS=600

############################
# Express / API 설정
############################
# 프록시 신뢰 여부 (true/false)
EXPRESS_TRUST_PROXY=false
# CORS 사용 여부 (true/false)
CORS_ENABLED=true

############################
# 로깅 / 외부 통합 (선택)
############################
# 로그 채널 (예: 텔레그램/슬랙 등 외부 전송용 ID)
LOG_CHANNEL_ID=
# OpenAI API 사용 시 키 (미사용이면 비워두기)
OPENAI_API_KEY=

############################
# 추가 크롤러 커스터마이징 (필요 시)
############################
# 기사 상세 크롤 재시도 최대 횟수 (코드에서 지원 시)
# DETAIL_MAX_RETRY=2
# 제목/소스 정규화 디버그 출력 (true/false)
# DEBUG_TITLE_NORMALIZE=false